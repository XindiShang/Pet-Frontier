<% layout('layouts/boilerplate') %>
    <div class="alert alert-danger " role="alert" style="word-wrap:break-word">
        <h4 class="alert-heading">Oops! <%= err.message %>
        </h4>
        <% if (process.env.NODE_ENV !== "production") { %> 
            <p><%= err.stack %></p>
        <% } %> 
        <hr>
        <p class="mb-0">错误代码：<%= err.statusCode %>
        </p>
    </div>

    <div class="errorBox container mb-5">
        <img src="/assets/cry.jpg" alt="" class="errorImage mt-3 mb-3">
        <a href="/" class="btn btn-primary btn-lg">回到主页</a>
    </div>