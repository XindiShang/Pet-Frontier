<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center mt-3 mb-4">
        <div class="row">
            <div class="col-md-6 col-xl-4">
                <div class="card shadow" style="width: 22rem">
                    <div class="card-body">
                        <h5 class="card-title login-title">忘记密码？</h5>
                        <form action="/forgot" method="POST" class="validated-form" novalidate>
                            <div class="mb-3 form-group">
                                <label for="email" class="form-label">请输入与您的账号关联的邮箱地址，我们将通过电子邮件给您发送重置密码的链接。</label>
                                <input type="email" name="email" placeholder="邮箱" class="form-control" autofocus
                                    required>
                                <div class="valid-feedback">很好!</div>
                                <div class="invalid-feedback">请输入</div>
                            </div>
                            <div class="mb-2 d-grid">
                                <button class="btn btn-primary">发送重置链接</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>