<% layout('layouts/boilerplate') %>
    <div class="container">

        <h1 class="text-capitalize">
            <%= user.username %>的主页
        </h1>
        <% if (currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin) {%>
            <a href="/users/<%= user._id %>/editProfile" class="mb-3 editLink"><strong>编辑个人资料</strong></a>
        <% } %>
        <hr class="card-line">

        <div class="row">
            <div class="col-md-6 mb-3 p-4">
                
                <div class="card shadow mx-auto mt-0 profileCard">
                    <div class="card-img-top text-center mt-4">
                        <img class="showPageAvatar lazy-load-image" src="<%= user.avatar.blurProfile %>" data-src="<%= user.avatar.profile %>" alt="user profile image">
                    </div>
                    <hr class="card-line">
                    <div class="card-body px-4">
                        <div class="fs-5"><label>邮箱：</label><a href="mailto:<%=user.email %>">
                                <%= user.email %>
                            </a></div>
                        <div class="fs-5">
                            <label>个人简介：</label>
                            <%= user.bio%>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mx-auto p-4 mb-3">
                <h3 class="text-capitalize mt-0" >
                    <%= user.username %>的宠物店
                </h3>    
                <div class="list-group" id="userShopList">
                    <% petshops.forEach(function(petshop, ) { %>
                        <a class="list-group-item list-group-item-action" href="/petshops/<%= petshop.id %>">
                            <%= petshop.name %>
                                <div class="d-flex w-100 justify-content-between">
                                    <p class="mb-1">“<%= petshop.description %>”</p>
                                    <small class="text-muted">
                                        <%= petshop.province %>, <%= petshop.city %>
                                    </small>
                                </div>
                        </a>
                        <% }); %>
                </div>
            </div>

        </div>
    </div>

  